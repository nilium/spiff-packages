# Template file for 'rebar3'
pkgname=rebar3
version=3.5.3
revision=1
build_style=fetch
depends=erlang
short_desc="Erlang build tool to compile, test, and release applications"
maintainer="Noel Cower <ncower@gmail.com>"
license="Apache-2.0"
homepage="https://www.rebar3.org/"
checksum="@54d155061259612c5d2643922062fcc9e017809e356ad301c1af67bd866be2e6"

do_fetch() {
	$XBPS_FETCH_CMD "https://github.com/erlang/rebar3/releases/download/${version}/rebar3"
}

do_install() {
	vbin ../rebar3
}
